<!doctype html>
<html>

<head>
  <title>Not So Secret Love Notes</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-heart"></span> Not So Secret Love Notes <span class="fa fa-heart"></span></h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->

      <div class="text-center">
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i<notes.length; i++) {%>
          <li class="message">
            <span class="to" data-value="<%= notes[i]._id %>"><%= notes[i].to %></span>
            <span class="from" data-value="<%= notes[i]._id %>"><%= notes[i].from %></span>
            <span class="note" data-value="<%= notes[i]._id %>"><%= notes[i].note %></span>
            <span class="heart" data-value="<%= notes[i]._id %>"><%= notes[i].heart %></span>
            <button class="fa fa-heart" aria-hidden="true" data-value="<%= notes[i]._id %>">like</button>
            <span><i class="fa fa-trash" aria-hidden="true" data-value="<%= notes[i]._id %>"></i></span>
          </li>
          <% } %>
        </ul>

      <div class="text-center">
        <h2>Add a message</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <div class="tofrom">
          <input type="text" value="<%= user.local.email %>" name="from">
          <input type="text" value="" name="to" placeholder="To: Crush's Name">
        </div>
          <p><input  class="text-area" type="text" placeholder="Please write your love note here" name="note"></p>
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

    <script src="main.js"></script>

</body>

</html>
